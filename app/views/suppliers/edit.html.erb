<%= form_for @supplier do |f| %>
    <div class="productContainer">
    <div class="row container">
        <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Supplier</h1>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Supplier Name: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :sname, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Supplier Address: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :saddress, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Supplier Contact Number: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :scontactn, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Supplier Contact Person: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :scontactp, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Payment: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :spayment, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-1">
            <h4>Notes: </h4>
        </div>
        <div class="col-md-2">
            <%= f.text_field :snotes, class: "input" %>
        </div>
    </div>
    <div class="row container">
        <div class="col-md-2 col-md-offset-1">
            <%= f.submit "Submit", class: "btn btn-prmry" %>
        </div>
    </div>
</div>

<% end %>