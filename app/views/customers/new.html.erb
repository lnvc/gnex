<h1>Add Customer</h1>
<%= form_for @customer do |f| %>
    <p>
        <%= f.label :cname %><br>
        <%= f.text_field :cname %>
    </p>
    <p>
        <%= f.label :caddress %><br>
        <%= f.text_field :caddress %>
    </p>
    <p>
        <%= f.label :ccontactn %><br>
        <%= f.text_field :ccontactn %>
    </p>
    <p>
        <%= f.label :ccontactp %><br>
        <%= f.text_field :ccontactp %>
    </p>
    <p>
        <%= f.label :cpayment %><br>
        <%= f.text_field :cpayment %>
    </p>
    <p>
        <%= f.label :cnotes %><br>
        <%= f.text_field :cnotes %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %> 